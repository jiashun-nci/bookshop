<!-- Header-->
<header class="bg-info py-1">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">Forgot your password?</h1>
          <p class="lead fw-normal text-white-50 mb-0">Your Online Bookshop</p>
      </div>
      
  </div>
</header>

<div class="row py-5">
<div class="col-md-3"></div>
   <div class="col-md-6" style="height:800px;">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

   </div>

   <div class="col-md-3"></div>
</div>
