<!-- Header-->
<header class="bg-info py-1">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">Log In</h1>
          <p class="lead fw-normal text-white-50 mb-0">Your Online Bookshop</p>
      </div>
      
  </div>
</header>


<div class="row py-5">
<div class="col-md-3"></div>
   <div class="col-md-6" style="height:800px;">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

   </div>

   <div class="col-md-3"></div>
</div>