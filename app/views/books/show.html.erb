<p style="color: green"><%= notice %></p>

<%= render @book %>

  <!-- List reviews belong to this book -->
  <h2>Reviews</h2>
	<% @book.reviews.each do |review| %>
  <p>
    <strong>Who:</strong>
    <%= review.who %>
  </p>
 
  <p>
    <strong>Message:</strong>
    <%= review.message %>
  </p>
<% end %>




  <!-- Add reviews from users-->
  
  <div>
    <h2>Add a Review:</h2>
    <%= form_for([@book, @book.reviews.build]) do |f| %>
  <p>
    <%= f.label :who %><br>
    <%= f.text_field :who %>
  </p>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <p> <%= f.submit %> </p> 
    <% end %>
  </div>



<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %>

  <%= button_to "Destroy this book", @book, method: :delete %>
</div>
