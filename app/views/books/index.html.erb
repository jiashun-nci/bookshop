

<!-- Header-->
<header class="bg-info py-1">
  <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
          <h1 class="display-4 fw-bolder">Book Shelf</h1>
          <p class="lead fw-normal text-white-50 mb-0">Your Online Bookshop</p>
          
      </div>
      <div class="text-center text-white pt-3">
      	<%= link_to "Add New Book", new_book_path, class:"btn btn-primary btn-lg" %>
      </div>
  </div>
</header>



<p style="color: green"><%= notice %></p>


 <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% @books.each do |book| %>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-warning text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src=<%= book.image_url %> alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= book.title %></h5>
                                    <!-- Product reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill">&#9733;</div>
                                        <div class="bi-star-fill">&#9733;</div>
                                        <div class="bi-star-fill">&#9733;</div>
                                        <div class="bi-star-fill">&#9733;</div>
                                    </div>
                                    <!-- Product price-->
                                    <span class="">$<%= book.price %></span>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><%= link_to "View this book", book, class:"btn btn-outline-info mt-auto" %></div>
                            </div>
                        </div>
                    </div>
                <% end %>
                </div>
            </div>
        </section>