<div id="<%= dom_id book %>">
  <p>
    <strong>Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Desc:</strong>
    <%= book.desc %>
  </p>

  <p>
    <strong>Page number:</strong>
    <%= book.page_number %>
  </p>

  <p>
    <strong>Release year:</strong>
    <%= book.release_year %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= book.image_url %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author_id %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= book.category_id %>
  </p>
  <!-- reviews -->
  <h2>Reviews</h2>
<% @book.reviews.each do |review| %>
  <p>
    <strong>Who:</strong>
    <%= review.who %>
  </p>
 
  <p>
    <strong>Message:</strong>
    <%= review.message %>
  </p>
<% end %>


  <!-- Add reviews from users-->
  
  <div>
    <h2>Add a Review:</h2>
    <%= form_for([@book, @book.reviews.build]) do |f| %>
  <p>
    <%= f.label :who %><br>
    <%= f.text_field :who %>
  </p>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <p> <%= f.submit %> </p> 
    <% end %>
  </div>

</div>
