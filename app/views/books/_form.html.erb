<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :isbn, style: "display: block" %>
    <%= form.text_field :isbn %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :desc, style: "display: block" %>
    <%= form.text_area :desc %>
  </div>

  <div>
    <%= form.label :page_number, style: "display: block" %>
    <%= form.number_field :page_number %>
  </div>

  <div>
    <%= form.label :release_year, style: "display: block" %>
    <%= form.date_field :release_year %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <!--  <%= form.text_field :author_id %> -->
    <%= form.collection_select :cauthor_id, Author.all, :id, :name, prompt: false %>  
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <!-- <%= form.text_field :category_id %>  -->
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
